<Window x:Class="FiguresApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Фигуры" Height="600" Width="800">
    <Grid>
        <StackPanel Margin="20">

            <!-- Заголовок -->
            <TextBlock Text="Работа с фигурами" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

            <!-- Кнопки -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Button x:Name="LoadBtn" Content="1. Загрузить" Click="LoadBtn_Click" Width="100" Height="30"/>
                <Button x:Name="ShowAllBtn" Content="2. Все фигуры" Click="ShowAllBtn_Click" Width="100" Height="30" Margin="10,0,0,0"/>
                <Button x:Name="SortBtn" Content="3. Сортировать многоуг." Click="SortBtn_Click" Width="120" Height="30" Margin="10,0,0,0"/>
                <Button x:Name="GreenBtn" Content="4. Зеленые окруж." Click="GreenBtn_Click" Width="120" Height="30" Margin="10,0,0,0"/>
            </StackPanel>

            <!-- Новые кнопки для управления фигурами -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <Button x:Name="AddFigureBtn" Content="5. Добавить фигуру" Click="AddFigureBtn_Click" Width="120" Height="30"/>
                <Button x:Name="RemoveFigureBtn" Content="6. Удалить фигуру" Click="RemoveFigureBtn_Click" Width="120" Height="30" Margin="10,0,0,0"/>
                <Button x:Name ="FindAndEditBtn" Content="7. Найти и редактировать" Width="150" Height="30" Margin="10,0,0,0" Click="FindAndEditBtn_Click"/>
            </StackPanel>

            <!-- Результат -->
            <ScrollViewer Height="350" Background="LightYellow">
                <StackPanel x:Name="OutputPanel" Margin="10"/>
            </ScrollViewer>

            <!-- Статус -->
            <TextBlock x:Name="Status" Text="Нажмите кнопку 1 - Загрузить" Margin="0,10,0,0"/>

        </StackPanel>
    </Grid>
</Window>