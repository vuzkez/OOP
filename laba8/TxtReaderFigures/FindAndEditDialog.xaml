<Window x:Class="FiguresApp.FindAndEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Найти и заменить фигуру" Height="450" Width="600"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <GroupBox Grid.Column="0" Header="Поиск и замена" Margin="10">
            <StackPanel>
                <GroupBox Header="Критерии поиска" Margin="0,0,0,10">
                    <StackPanel Margin="5">
                        <TextBlock Text="Тип фигуры:" FontWeight="Bold"/>
                        <ComboBox x:Name="SearchTypeComboBox" Margin="0,5,0,10">
                            <ComboBoxItem Content="Любой"/>
                            <ComboBoxItem Content="Окружность"/>
                            <ComboBoxItem Content="Многоугольник"/>
                        </ComboBox>

                        <TextBlock Text="Цвет:" FontWeight="Bold"/>
                        <TextBox x:Name="SearchColorTextBox" Text="" Margin="0,5,0,10"
                               ToolTip="Оставьте пустым для любого цвета"/>

                        <Button x:Name="FindButton" Content="Найти первую подходящую" 
                               Click="FindButton_Click" Height="30" Margin="0,10,0,0"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Информация о фигуре" Margin="0,0,0,10" Height="205">
                    <StackPanel x:Name="FigureInfoPanel" Margin="5">
                        <TextBlock Text="Тип: " FontWeight="Bold"/>
                        <TextBlock x:Name="CurrentTypeText" Margin="0,0,0,5"/>

                        <TextBlock Text="Цвет: " FontWeight="Bold"/>
                        <TextBlock x:Name="CurrentColorText" Margin="0,0,0,5"/>

                        <TextBlock Text="Площадь: " FontWeight="Bold"/>
                        <TextBlock x:Name="CurrentAreaText" Margin="0,0,0,5"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </GroupBox>

        <GroupBox Grid.Column="2" Header="Новые значения" Margin="10">
            <StackPanel>
                <GroupBox Header="Общие параметры" Margin="0,0,0,10">
                    <StackPanel Margin="5">
                        <TextBlock Text="Новый цвет:" FontWeight="Bold"/>
                        <ComboBox x:Name="NewColorComboBox" Margin="0,5,0,15">
                            <ComboBoxItem Content="Red"/>
                            <ComboBoxItem Content="Green"/>
                            <ComboBoxItem Content="Blue"/>
                            <ComboBoxItem Content="Black"/>
                            <ComboBoxItem Content="Yellow"/>
                            <ComboBoxItem Content="Orange"/>
                            <ComboBoxItem Content="Purple"/>
                        </ComboBox>

                        <TextBlock Text="Новый тип:" FontWeight="Bold"/>
                        <ComboBox x:Name="NewTypeComboBox" Margin="0,5,0,15" 
                                SelectionChanged="NewTypeComboBox_SelectionChanged">
                            <ComboBoxItem Content="Окружность"/>
                            <ComboBoxItem Content="Многоугольник"/>
                        </ComboBox>
                    </StackPanel>
                </GroupBox>

                <GroupBox x:Name="CircleParamsGroup" Header="Параметры окружности" 
                         Margin="0,0,0,10" Visibility="Collapsed">
                    <StackPanel Margin="5">
                        <TextBlock Text="Центр:" FontWeight="Bold"/>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                            <TextBlock Text="X:" Width="20"/>
                            <TextBox x:Name="NewCenterX" Text="0" Width="60"/>
                            <TextBlock Text="Y:" Width="20" Margin="10,0,0,0"/>
                            <TextBox x:Name="NewCenterY" Text="0" Width="60"/>
                        </StackPanel>

                        <TextBlock Text="Точка на окружности:" FontWeight="Bold" Margin="0,10,0,0"/>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="X:" Width="20"/>
                            <TextBox x:Name="NewEdgeX" Text="5" Width="60"/>
                            <TextBlock Text="Y:" Width="20" Margin="10,0,0,0"/>
                            <TextBox x:Name="NewEdgeY" Text="0" Width="60"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <!-- Параметры многоугольника -->
                <GroupBox x:Name="PolygonParamsGroup" Header="Параметры многоугольника" 
                         Margin="0,0,0,10" Visibility="Collapsed">
                    <StackPanel Margin="5">
                        <TextBlock Text="Длина стороны:" FontWeight="Bold"/>
                        <TextBox x:Name="NewSideLength" Text="5" Margin="0,5,0,10"/>

                        <TextBlock Text="Количество сторон:" FontWeight="Bold"/>
                        <ComboBox x:Name="NewSidesCount" Margin="0,5,0,0">
                            <ComboBoxItem Content="3"/>
                            <ComboBoxItem Content="4"/>
                            <ComboBoxItem Content="5"/>
                            <ComboBoxItem Content="6"/>
                            <ComboBoxItem Content="7"/>
                            <ComboBoxItem Content="8"/>
                        </ComboBox>
                    </StackPanel>
                </GroupBox>

                <!-- Кнопки -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <Button x:Name="ApplyButton" Content="Применить" Click="ApplyButton_Click" 
                           Width="80" Height="30" IsEnabled="False"/>
                    <Button x:Name="CancelButton" Content="Выйти" Click="CancelButton_Click" 
                           Width="80" Height="30" Margin="10,0,0,0"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>