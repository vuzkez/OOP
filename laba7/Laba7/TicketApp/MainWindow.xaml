<Window x:Class="TicketApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Продажа билетов" Height="450" Width="866">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Панель выбора маршрута -->
        <GroupBox Header="Выбор маршрута" Grid.Row="0" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal">
                <ComboBox x:Name="cmbFrom" Width="120" Margin="5" DisplayMemberPath="."/>
                <TextBlock Text=" → " VerticalAlignment="Center" FontSize="16"/>
                <ComboBox x:Name="cmbTo" Width="120" Margin="5" DisplayMemberPath="."/>
                <ComboBox x:Name="cmbTransport" Width="120" Margin="5" DisplayMemberPath="Key"/>
            </StackPanel>
        </GroupBox>

        <!-- Информация о доступных местах -->
        <GroupBox Header="Информация" Grid.Row="1" Margin="0,0,0,10">
            <StackPanel>
                <TextBlock x:Name="txtAvailableSeats" Margin="5" FontSize="14"/>
                <Button x:Name="btnCheckSeats" Content="Проверить доступные места" 
                        Click="btnCheckSeats_Click" Margin="5" Padding="10,5"/>
            </StackPanel>
        </GroupBox>
        
        <!-- Управление -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="btnSellTicket" Content="Продать билет" 
            Click="btnSellTicket_Click" Margin="5" Padding="15,5" FontSize="14"/>
            <Button x:Name="btnRemoveTicket" Content="Удалить билет" 
            Click="btnRemoveTicket_Click" Margin="5" Padding="15,5" FontSize="14"/>
            <Button x:Name="btnShowAllRoutes" Content="Показать все маршруты" 
            Click="btnShowAllRoutes_Click" Margin="5" Padding="15,5" FontSize="14"/>
            <Button Content="Изменить маршрут" Width="150" Margin="5"
        Click="btnEditRoute_Click"/>
            <Button Content="Изменить транспорт" Width="150" Margin="5"
        Click="btnEditTransport_Click"/>
        </StackPanel>
    </Grid>
</Window>